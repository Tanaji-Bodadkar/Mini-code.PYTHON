def my_chatbot(input_text):
    if 'hello' in input_text.lower() or 'hi' in input_text.lower():
        return "Hi champ! How can i help you?"
    elif 'how are you' in input_text.lower():
        return "I'm just a bot, but I'm here to assist you"
    elif 'what do you do' in input_text.lower(): 
        return "i generate a human like text when someone asks me to answer it"
    elif 'bye' in input_text.lower() or 'goodbye' in input_text.lower():
        return "Goodbye! Have a great day."
    else :
         return "SORRY! I didnt understand...."
#example pur
while True:
    user_input = input("You: ")
    if user_input.lower() == 'exit':
        break
    response = my_chatbot(user_input)
    print("Bot:", response)
























